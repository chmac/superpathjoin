{
  "compilerOptions": {
    "sourceMap": false,
    "target": "es5",
    "module": "ESNext",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "declaration": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "noImplicitReturns": false,
    "noUnusedLocals": true,
    "removeComments": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "noEmitOnError": true,
    "outDir": "dist",
    "lib": ["esnext"]
  },
  "include": ["src/**/*"],
  "exclude": ["**/__tests__/**", "node_modules"]
}
